@using Application.DTOs
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var weather = ViewBag.Weather as WeatherDto;
}
<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NätOnNät</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #0066cc;
            --secondary-color: #ff6600;
            --dark-bg: #1a1a1a;
            --card-bg: #2d2d2d;
            --text-light: #e0e0e0;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar Styles */
        .navbar {
            background: rgba(26, 26, 26, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            background: linear-gradient(45deg, #0066cc, #ff6600);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @@keyframes glow {
            from { filter: drop-shadow(0 0 2px #0066cc); }
            to { filter: drop-shadow(0 0 4px #ff6600); }
        }

        .weather-widget {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 8px 16px;
            color: white;
            font-size: 0.9rem;
            animation: fadeIn 0.5s ease-in;
            transition: transform 0.3s ease;
        }

        .weather-widget:hover {
            transform: scale(1.05);
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Improved Product Card Styles */
        .product-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            height: 100%;
            position: relative;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            z-index: 10;
        }

        /* Image container to prevent overflow */
        .product-card .img-container {
            position: relative;
            overflow: hidden;
            height: 200px;
            background: #f8f9fa;
        }

        .product-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover img {
            transform: scale(1.1);
        }

        .product-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .price-tag {
            font-size: 1.3rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        /* Section Headers */
        .section-header {
            text-align: center;
            margin: 3rem 0 2rem;
            position: relative;
            color: white;
        }

        .section-header h2 {
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            position: relative;
            display: inline-block;
        }

        .section-header h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #0066cc, #ff6600);
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from { width: 0; }
            to { width: 50px; }
        }

        /* Newsletter Form Styles */
        .newsletter-form {
            position: relative;
        }

        .newsletter-input {
            transition: border-color 0.3s ease;
        }

        .newsletter-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(0, 102, 204, 0.25);
        }

        .newsletter-input.is-invalid {
            border-color: #dc3545;
        }

        .newsletter-input.is-valid {
            border-color: #28a745;
        }

        .email-feedback {
            display: none;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }

        .email-feedback.invalid-feedback {
            color: #dc3545;
            display: block;
        }

        .email-feedback.valid-feedback {
            color: #28a745;
            display: block;
        }

        .newsletter-success {
            display: none;
            color: #28a745;
            margin-top: 0.5rem;
            animation: fadeIn 0.5s ease;
        }

        /* Footer */
        footer {
            background: rgba(26, 26, 26, 0.95);
            color: white;
            padding: 3rem 0;
            margin-top: 5rem;
            box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.3);
        }

        .footer-links a {
            color: #e0e0e0;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: var(--secondary-color);
        }

        /* Mobile First Responsive */
        @@media (max-width: 768px) {
            .navbar-brand { font-size: 1.2rem; }
            .weather-widget { 
                margin-top: 10px;
                width: 100%;
                text-align: center;
            }
            .product-card { margin-bottom: 20px; }
            .section-header h2 { font-size: 1.5rem; }
            .product-card .img-container { height: 150px; }
        }

        /* Loading Animation */
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-cpu"></i> NätOnNät
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i> Hem
                        </a>
                    </li>
                </ul>
                
                <!-- Weather Widget -->
                @if (ViewBag.Weather != null)
                {
                    var w = ViewBag.Weather as WeatherDto;
                    <div class="weather-widget">
                        <span>@w.Icon</span>
                        <span>@w.Location: @Math.Round(w.Temperature)°C</span>
                        <span class="d-none d-md-inline">| @w.Description</span>
                    </div>
                }

                
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-info-circle"></i> Om NätOnNät</h5>
                    <p>Din pålitliga teknikbutik online sedan 2025. Vi erbjuder det senaste inom teknik till dem bästa priserna.</p>
                </div>
                <div class="col-md-4">
                    <h5><i class="bi bi-link-45deg"></i> Snabblänkar</h5>
                    <div class="footer-links">
                        <a href="#" class="d-block">Kundservice</a>
                        <a href="#" class="d-block">Leveransinformation</a>
                        <a href="#" class="d-block">Returnpolicy</a>
                        <a href="#" class="d-block">Kontakta oss</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5><i class="bi bi-envelope"></i> Nyhetsbrev</h5>
                    <p>Prenumerera för att få de senaste erbjudandena!</p>
                    <form id="newsletterForm" class="newsletter-form">
                        <div class="input-group">
                            <input type="email" 
                                   id="newsletterEmail" 
                                   class="form-control newsletter-input" 
                                   placeholder="Din e-post"
                                   required>
                            <button class="btn btn-primary" type="submit" id="subscribeBtn">
                                <span class="btn-text">Prenumerera</span>
                                <span class="loading-spinner" style="display: none;"></span>
                            </button>
                        </div>
                        <div class="email-feedback"></div>
                        <div class="newsletter-success">
                            <i class="bi bi-check-circle"></i> Tack för din prenumeration!
                        </div>
                    </form>
                </div>
            </div>
            <hr class="my-4" style="border-color: rgba(255,255,255,0.2);">
            <div class="text-center">
                <p>&copy; 2025 NätOnNät - Alla rättigheter reserverade</p>
                <div class="mt-2">
                    <a href="#" class="text-white mx-2"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="text-white mx-2"><i class="bi bi-twitter fs-4"></i></a>
                    <a href="#" class="text-white mx-2"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#" class="text-white mx-2"><i class="bi bi-youtube fs-4"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Email validation and newsletter subscription
        document.addEventListener('DOMContentLoaded', function() {
            const newsletterForm = document.getElementById('newsletterForm');
            const emailInput = document.getElementById('newsletterEmail');
            const feedback = document.querySelector('.email-feedback');
            const successMessage = document.querySelector('.newsletter-success');
            const subscribeBtn = document.getElementById('subscribeBtn');
            const btnText = subscribeBtn.querySelector('.btn-text');
            const spinner = subscribeBtn.querySelector('.loading-spinner');
            
            // Email validation regex
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        
            // Real-time validation
            emailInput.addEventListener('input', function() {
                const email = this.value.trim();
                
                if (email === '') {
                    this.classList.remove('is-valid', 'is-invalid');
                    feedback.className = 'email-feedback';
                    feedback.textContent = '';
                } else if (emailRegex.test(email)) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                    feedback.className = 'email-feedback valid-feedback';
                    feedback.innerHTML = '<i class="bi bi-check-circle"></i> Giltig e-postadress';
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                    feedback.className = 'email-feedback invalid-feedback';
                    feedback.innerHTML = '<i class="bi bi-exclamation-circle"></i> Ange en giltig e-postadress (t.ex. namn@example.com)';
                }
            });
            
            // Form submission
            newsletterForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const email = emailInput.value.trim();
                
                if (!emailRegex.test(email)) {
                    emailInput.classList.add('is-invalid');
                    feedback.className = 'email-feedback invalid-feedback';
                    feedback.innerHTML = '<i class="bi bi-exclamation-circle"></i> Vänligen ange en giltig e-postadress';
                    emailInput.focus();
                    return;
                }
                
                // Show loading state
                btnText.style.display = 'none';
                spinner.style.display = 'inline-block';
                subscribeBtn.disabled = true;
                
                // Simulate API call
                setTimeout(function() {
                    // Hide loading state
                    btnText.style.display = 'inline';
                    spinner.style.display = 'none';
                    subscribeBtn.disabled = false;
                    
                    // Show success message
                    emailInput.value = '';
                    emailInput.classList.remove('is-valid', 'is-invalid');
                    feedback.className = 'email-feedback';
                    feedback.textContent = '';
                    successMessage.style.display = 'block';
                    
                    // Hide success message after 5 seconds
                    setTimeout(function() {
                        successMessage.style.display = 'none';
                    }, 5000);
                }, 1500);
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>